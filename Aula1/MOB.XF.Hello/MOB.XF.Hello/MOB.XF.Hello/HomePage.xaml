<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MOB.XF.Hello.HomePage">

  <ContentPage.Content>
    <StackLayout Padding="50" Spacing="30">
      <Label Text="Formulário do curso" Font="20" />
      <StackLayout Orientation="Horizontal">
        <Label Text="Aluno" />
        <Entry x:Name="txtAluno" Placeholder="Informe o nome do aluno"
               TextChanged="TxtAluno_TextChanged" />
      </StackLayout>
      <Button Text="Cadastrar" Clicked="OnButtton_Cadastrar" />
      <StackLayout Padding="50">
        <Label x:Name="mensagemStatus" />
      </StackLayout>
    </StackLayout>
  </ContentPage.Content>

</ContentPage>