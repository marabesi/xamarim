<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MOB.XF.Hello.TableViewPage">

  <ContentPage.Content>
    <TableView>

      <TableView.Root>
        
        <TableSection Title="Privacidade">
          <SwitchCell Text="Rastrear localização" />
          <SwitchCell Text="Permitir cookies" />
        </TableSection>

        <TableSection Title="Desempenho Nota">
          <SwitchCell Text="Disponibilizar no mutal" On="True" />
          <SwitchCell Text="Enviar por e-mail" />
          <SwitchCell Text="Receber SMS" />
        </TableSection>
      
      </TableView.Root>

    </TableView>
  </ContentPage.Content>
</ContentPage>